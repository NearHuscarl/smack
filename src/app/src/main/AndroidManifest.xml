<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nearhuscarl.smack">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Controllers.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:inputType="textMultiLine|textShortMessage"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Controllers.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controllers.LoginActivity" />
        <activity android:name=".Controllers.CreateUserActivity" />
        <activity
            android:name=".Controllers.UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>